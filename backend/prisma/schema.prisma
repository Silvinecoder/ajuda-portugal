generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model HelpRequest {
  id               String   @id @default(cuid())
  slug             String   @unique
  urgency          String
  category         String
  description      String?
  lat              Float
  lng              Float
  contactType      String   @default("whatsapp")
  contact          String
  name             String?
  views            Int      @default(0)
  helpClicks       Int      @default(0)
  status           String   @default("pending")
  createdAt        DateTime @default(now())
  expiresAt        DateTime

  reports Report[]
}

model Report {
  id        String      @id @default(cuid())
  requestId String
  request   HelpRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  reason    String // fake_spam, money_request, inadequate_info, duplicate, resolved, other
  details   String?
  createdAt DateTime    @default(now())
}
